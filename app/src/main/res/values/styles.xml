<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkgrey</item>
    </style>
    <style name="ActionBar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#101B65</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="actionBarSize">100dp</item>
        <item name="android:logo">@mipmap/ic_launcher</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorAccent">@color/darkgrey</item>
    </style>

</resources>
